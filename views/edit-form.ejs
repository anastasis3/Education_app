<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Form - <%= form.title %></title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f9faff;
      color: #333;
      max-width: 800px;
      margin: 2rem auto;
      padding: 2rem;
    }

    h1 {
      color: #4b4fcf;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .question-block {
      background: #f0f4ff;
      padding: 1rem;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    label {
      font-weight: 500;
    }

    input[type="text"] {
      width: 100%;
      padding: 0.5rem;
      margin-top: 0.5rem;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    input[type="checkbox"] {
      margin-right: 0.5rem;
    }

    button {
      padding: 0.75rem;
      background: linear-gradient(90deg, #7b68ee, #4169e1);
      color: white;
      border: none;
      border-radius: 6px;
      font-weight: bold;
      font-size: 1rem;
      cursor: pointer;
      width: 100%;
      transition: background 0.3s ease;
    }

    button:hover {
      background: #5a4fcf;
    }
  </style>
</head>
<body>
  <h1>Edit Form</h1>
  <form action="/edit-form/<%= form.id %>" method="POST">
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      placeholder="Enter form title"
      required
      value="<%= form.title %>"
    />

    <% for (let i = 1; i <= 4; i++) { 
      const question = questions.find(q => q.question_order === i);
    %>
      <div class="question-block">
        <label>
          <input type="checkbox" name="active_<%= i %>" <%= question && question.is_active ? 'checked' : '' %> />
          Activate Question <%= i %>
        </label>
        <input
          type="text"
          name="question_<%= i %>"
          placeholder="Enter question <%= i %> text"
          value="<%= question ? question.question_text : '' %>"
        />
      </div>
    <% } %>

    <button type="submit">Save Changes</button>
  </form>
  <br>
  <a href="/my-forms">Back to My Forms</a>
</body>
</html>
